<UserControl x:Class="CadEye.View.File_Watcher_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadEye.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="1" BorderBrush="#333333">
        <DataGrid x:Name="FildData_Grid" 
                  VerticalAlignment="Top"
                  IsReadOnly="True"
                  Style="{StaticResource Data_Gaid_Background}"
                  ColumnHeaderStyle ="{StaticResource Data_Grid_ColumnHeader}"
                  CellStyle="{StaticResource Data_Grid_Cell}"
                  ItemsSource="{Binding File_History}"
                  SelectedItem="{Binding Selected_EventEntry_File, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Occuretime" 
                    Binding="{Binding Time}" 
                    ElementStyle ="{StaticResource Data_ElementStyle}"
                    Width="200"/>
                <DataGridTextColumn 
                    Header="Event" 
                    Binding="{Binding Type}" 
                    ElementStyle ="{StaticResource Data_ElementStyle}"
                    Width="120"/>
                <DataGridTextColumn 
                    Header="Reason" 
                    Binding="{Binding Description}" 
                    ElementStyle ="{StaticResource Data_ElementStyle}"
                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</UserControl>
