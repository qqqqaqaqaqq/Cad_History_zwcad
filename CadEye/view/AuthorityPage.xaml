<UserControl x:Class="CadEye.View.AuthorityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadEye.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="Event_Grid" 
           VerticalAlignment="Top"
           IsReadOnly="True"
           Style="{StaticResource Data_Gaid_Background}"
           ColumnHeaderStyle ="{StaticResource Data_Grid_ColumnHeader}"
           CellStyle="{StaticResource Data_Grid_Cell}"
           ItemsSource="{Binding Event_History}">
            <DataGrid.Columns>
                <DataGridTextColumn 
             Header="Event" 
             Binding="{Binding}" 
             ElementStyle ="{StaticResource Data_ElementStyle}"
             Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
