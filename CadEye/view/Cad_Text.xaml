<UserControl x:Class="CadEye.View.Cad_Text"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CadEye.View"
             mc:Ignorable="d" 
                 d:DesignHeight="500" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Style="{StaticResource Body-Label}"
          Content="T A G"></Label>
        <Border Grid.Row="1" >
            <ListBox x:Name="Note" ItemsSource="{Binding Tag}" SelectionMode="Multiple" Background="Transparent"/>
        </Border>

        <Label Grid.Row="2" Style="{StaticResource Body-Label}"
          Content="R E F"></Label>
        <Border Grid.Row="3" >
            <ListBox x:Name="BOM" ItemsSource="{Binding Ref}"  SelectionMode="Multiple" Background="Transparent"/>
        </Border>
    </Grid>
</UserControl>
