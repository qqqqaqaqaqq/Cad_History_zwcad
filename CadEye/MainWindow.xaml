<Window x:Class="CadEye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadEye"
        xmlns:view="clr-namespace:CadEye.View"
        mc:Ignorable="d"
        x:Name="DashboardWindow" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Height="800" 
        Width="1400"
        Title="Cad History (Zwcad version)">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <!-- BackGround -->
    <Border Background="#808080" CornerRadius="0,0,10,10" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Body -->
            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0">
                    <view:Cad_FileView  x:Name="Cad_FileView1"
                                   Width="auto"
                                   Height="auto"
                                   Margin="10"/>
                </Border>

                <Border Grid.Column="2">
                    <view:Cad_Text Width="auto"
                                    Height="auto"
                                   Margin="10"/>
                </Border>

                <Border Grid.Column="4">
                    <view:File_Watcher_View Width="auto"
                                    Height="auto"
                                    Margin="10"/>
                </Border>

            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <view:PdfContainer Grid.Column="0" x:Name="Pdf_Viewer" Margin="10,0,0,0"/>
                <view:PdfContainer2 Grid.Column="2" x:Name="Pdf_Viewer2" Margin="0,0,10,0"/>
            </Grid>
            <Grid Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="@Copyright (Github)qqqqaqaqaqq" FontFamily="Segoe UI" Foreground="White"></Label>
            </Grid>
        </Grid>
    </Border>
</Window>
